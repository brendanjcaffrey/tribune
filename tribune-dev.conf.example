# this file belongs in /opt/homebrew/etc/nginx/servers/

upstream tribune_vite_server {
    server localhost:1848;
}

server {
    listen 1849 ssl;
    server_name [TAILSCALE DOMAIN HERE];

    # SSL certificate and key paths
    ssl_certificate      /Users/[USERNAME HERE]/Library/Containers/io.tailscale.ipn.macos/Data/[TAILSCALE DOMAIN HERE].crt;
    ssl_certificate_key  /Users/[USERNAME HERE]/Library/Containers/io.tailscale.ipn.macos/Data/[TAILSCALE DOMAIN HERE].key;

    # Additional SSL options for security
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;
    ssl_ciphers HIGH:!aNULL:!MD5;

    # Specify the location of the app
    location / {
        proxy_pass http://tribune_vite_server;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";
    }
}
